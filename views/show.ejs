  <style>

  .border{
    border:1px solid black;
    margin:2px;
    width: 480px;
    margin-left:300px;
  }

  </style>

</head>
<header >
<div id='main_page_header'>

</div>
</header>

<h1>search results</h1>
<body>
<a href="/">HOME</a>
<div class="container">
<% if(results.styles) { %>
  <% results.styles.forEach((x) => { %>
  <div class="border">
  <ul>
        <li>Name  :<%= x.name%></li>
        <li>Year  : 2015</li>
        <li>Type  :<%= x.submodel.body %></li>
        <li>Model :<%= x.submodel.modelName %></li>
   </ul>

    <form class="save" action="/favorites" method="POST" accept-charset="utf-8">
    <input type="hidden" name="taco[Year]" value="<%= 2015 %>">
    <input type="hidden" name="taco[name]" value="<%= x.name %>">
    <input type="hidden" name="taco[Model]" value="<%= x.submodel.modelName %>">
    <input type="submit" name="name" value="Save">
    </form>
</div>
  <% }) %>
<% } %>
  </div>
<div class="container2">
    <h3>Results</h3>
     <% for(let i = 0; i <favorites.length ; i++){ %>
     <p><%= favorites[i].Year %><p>
     <p><%= favorites[i].name %><p>
     <p><%= favorites[i].Model %><p>
     <p><%= favorites[i].Type %><p>


     <form class="delete-favorite" action="/favorites/<%= favorites[i]._id %>?_method=DELETE" method="post">
        <input type="submit" value="Delete">
    </form>
  <% }; %>
</div>

</body>
<footer></footer>
</html>
